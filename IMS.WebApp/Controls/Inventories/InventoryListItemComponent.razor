@inject NavigationManager NavigationManager

@if (inventories.Count() > 0 && inventories != null)
{
    foreach (var inv in inventories)
    {
        <tr>
            <td>@inv.InventoryName</td>
            <td>@inv.Quantity</td>
            <td>@inv.Price</td>
            <td>
                <button type="button"
                        class="btn"
                        @onclick="@( () => EditInventoryItem(inv.InventoryId) )">Edit</button>
            </td>
        </tr>
    }
}

@code {
    [Parameter]
    public List<Inventory> inventories { get; set; } = new List<Inventory>();

    private void EditInventoryItem(int inventoryId)
    {
        NavigationManager.NavigateTo($"editinventory/{inventoryId}");
    }
}
