<InventoryDropdownComponent InventoryClickEventCallback="InventoryClickEventCallbackHandler" />

@if (ProductInventoryless.ProductInventories != null 
     && ProductInventoryless.ProductInventories.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Product Inventory Name</th>
                <th>Quantity</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var prodInv in ProductInventoryless.ProductInventories)
            {
                <tr>
                    <td>
                        @prodInv.Inventory?.InventoryName
                    </td>

                    <td>
                        <input type="number"
                               min="1"
                               @bind-value=prodInv.InventoryQuantity />
                    </td>

                    <td>
                        <button type="button"
                                class="btn btn-link"
                                @onclick=@( () => RemoveProductInventory(prodInv) )>
                                Remove
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


@code {
    [Parameter]
    public Product ProductInventoryless { get; set; } = new();

    private void InventoryClickEventCallbackHandler(Inventory inventory)
    {
        ProductInventoryless.AddProductInventory(inventory);
    }

    private void RemoveProductInventory(ProductInventory productInventory)
    {
        ProductInventoryless.ProductInventories.Remove(productInventory);
    }
}
