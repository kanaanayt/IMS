@page "/editproduct/{id:int}"

@inject IGetProductByIdService GetProductByIdService

<h3>EditProduct</h3>

<EditProductItemComponent productPopulated="@productPopulated" />

@code {
    [Parameter]
    public int id { get; set; }

    public Product productPopulated { get; set; } = new Product();

    protected override async Task OnParametersSetAsync()
    {
        productPopulated = await GetProductByIdService.ExecuteAsync(id);
    }
}
